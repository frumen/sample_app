<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user, size:"20x20") , feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Lo dijo hace <%= time_ago_in_words(feed_item.created_at) %>.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "Olvidemos esto...", feed_item, method:  :delete,
                                     confirm: "Seguro? Te arrepentis de lo que dijiste?!",
                                     title:   feed_item.content %>
  <% end %>
  <p>
</li>